@model IEnumerable<Product>


<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageUrl</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td><img class="border border-light rounded" src="@product.ImageUrl" alt="@product.ProductName" width="50"/></td>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">
                                <i class="fa fa-edit"></i>
                                Edit

                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">
                                <i class="fa fa-trash"></i>
                                Delete

                            </a>
                            <a class="btn btn-info" asp-area="" target="_blank" asp-controller="Product" asp-action="Get" asp-route-id="@product.Id">
                                <i class="fa fa-search"></i>
                                Ön İzleme

                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


